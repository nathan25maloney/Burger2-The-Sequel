<div class="jumbotron">
  <img src="/assets/img/burger.jpg" height=200 width=250>
  <h1>Eat-Da-Burger!</h1>
</div>


  <div class="container">
    <div class="row">
      <div class="col-md-3 col-md-offset-2">
        <ul class="list-group">
          {{#each burgers}}
            {{#unless this.devoured}}
              <li class="list-group-item">
                {{this.id}}. {{this.burger_name}}

                

              </li>

            {{/unless}}
          {{/each}}
        </ul>
      </div>
        <div class="col-md-2">
          {{#each burgers}}
            {{#unless this.devoured}}
                  <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button class="devour" type="submit">Devour it!</button>
                  </form>
            {{/unless}}
          {{/each}}

        </div>
      

      <div class="col-md-4">
        <ul class="list-group">
          {{#each burgers}}
            {{#if this.devoured}}
              <li class="list-group-item">
                {{this.id}}. {{this.burger_name}}
              </li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5 col-md-offset-5">

        <h2>Order a Burger!</h2>
        <form class="create-update-form" action="/" method="POST">

          <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="burger_name">
          </div>

          <button id="order" class="submit" type="submit">Add Your Order</button>
        </form>
      </div>
    </div>
  </div>
